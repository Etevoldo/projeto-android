<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#3fbcef"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txtNomeUsuarioMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nomeUsuario"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Biblioteca"
        android:id="@+id/btBiblioteca"
        android:textSize="30dp"
        android:layout_margin="20px"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Escanear"
        android:id="@+id/btEscanear"
        android:textSize="30dp"
        android:layout_margin="20px"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Meus Livros"
        android:id="@+id/btMeusLivros"
        android:textSize="30dp"
        android:layout_margin="20px"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:id="@+id/btLogOut"
        android:textSize="30dp"
        android:layout_margin="20px"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Suporte"
        android:id="@+id/btSuporte"
        android:textSize="30dp"
        android:layout_margin="20px"/>
    </LinearLayout>


</LinearLayout>
