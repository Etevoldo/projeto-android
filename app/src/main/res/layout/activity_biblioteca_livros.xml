<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtFig"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="E-Biblio"
            android:textColor="@color/ice"
            android:textSize="80px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:text="Eu, Robô"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:background="@color/green" />
        <ImageView
            android:id="@+id/imgEurobo"
            android:layout_width="121dp"
            android:layout_height="208dp"
            android:layout_marginVertical="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="300px"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/eurobocapa"
            android:clickable="true"
            android:onClick="IrparaoutraActivity"/>
        <ImageView
            android:id="@+id/imgOdisseia"
            android:layout_width="121dp"
            android:layout_height="208dp"
            android:src="@drawable/umaodisseia"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="350dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="IrparaoutraActivity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2001: Uma Odisseia no espaço"
            android:textSize="20dp"
            android:id="@+id/textView4"
            android:layout_marginTop="320dp"
            android:layout_alignTop="@id/imgEurobo"
            android:layout_marginLeft="60dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignTop="@id/imgEurobo"
            android:layout_marginTop="303dp"
            android:layout_marginLeft="135dp"
            android:text="Do passado distante ao ano de 2001, da África a Júpiter, dos homens-macacos à inteligência artificial HAL 9000, penetre a visão de um futuro que poderia ter sido, uma sofisticada..."
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgEurobo"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/imgEurobo"
            android:text="Um dos maiores clássicos da literatura de ficção científica, Eu, Robô, escrito pelo Bom Doutor, foi publicado originalmente em 1950."
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/textView6"
            android:layout_marginTop="200dp"
            android:layout_marginRight="40dp"
            android:text="Isaac Asimov"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/textView5"
            android:layout_marginRight="40dp"
            android:layout_marginTop="500dp"
            android:text="Arthur C. Clarke"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/txtsepara2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:background="@color/green" />
        <TextView
            android:id="@+id/txtsepara3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="810dp"
            android:background="@color/green" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgEurobo"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="589dp"
            android:text="Um Lugar bem longe daqui"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/imgUmlugar"
            android:layout_width="121dp"
            android:layout_height="160dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="620dp"
            android:src="@drawable/umlugar"
            android:clickable="true"
            android:onClick="IrparaoutraActivity"/>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="134dp"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="21dp"
            android:text="Abandonada quando menina, Kya cresceu nos perigosos pântanos da Carolina do Norte. Quando um garoto da cidade é encontrado morto, Kya imediatamente se torna a principal suspeita..."
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:layout_alignEnd="@id/textView8"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="106dp"
            android:text="Della Owes"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <Button
            android:id="@+id/btVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtsepara3"
            android:layout_alignParentBottom="@id/txtsepara3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:background="@color/dark_blue"
            android:text="Voltar"
            android:textSize="80px" />
    </RelativeLayout>
</ScrollView>