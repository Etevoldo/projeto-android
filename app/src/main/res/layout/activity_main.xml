<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3fbcef"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <androidx.appcompat.widget.ActionMenuView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|right"
        android:visibility="visible"
        android:icon="@drawable/ic_android_black_24dp"
        android:background="#044476"/>

    <TextView
        android:id="@+id/txtFig"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#044476"
        android:gravity="center"
        android:text="E-Biblio"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#fffcd0"
        android:textSize="80px"/>
    <ImageView
        android:id="@+id/imgFig"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:src="@drawable/ebiblio"/>

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="80px" />
    <EditText
        android:id="@+id/lblLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:inputType="text"
        android:textSize="80px" />
    <TextView
        android:id="@+id/txtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Senha"
        android:textColor="@color/black"
        android:textSize="80px" />
    <EditText
        android:id="@+id/lblSenha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:background="@color/white"
        android:inputType="text"
        android:textSize="80px" />
    <TextView
        android:id="@+id/txtEsqueciSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Esqueci a senha"
        android:textColor="@color/black"
        android:textSize="70px" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="40dp"
        android:backgroundTint="#044476"
        android:textColor="@android:color/black"
        android:text="Login"
        android:textSize="90px" />
</LinearLayout>